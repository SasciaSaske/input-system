{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "declaration": true,
        
        "experimentalDecorators": true,
        "stripInternal": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "strict": true,
        "allowJs": false,
    },
    "include": ["src", "dist"],
    "exclude": ["node_modules"]
}